<div class="container">
  <h1>Result</h1>
  <div>
    <h3><%= @message %></h3>
  </div>
  <div class="score">
    <h1>Score = <%= @score %></h1>
    <%= hidden_field_tag :score, @score %>
  </div>
  <div class="btn">
    <form action="new">
      <button class="btn btn-primary" action="new">Play again!</button>
    </form>
  </div>
</div>
