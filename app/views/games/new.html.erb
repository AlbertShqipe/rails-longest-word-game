<div class="letter container">
  <h1 class="title">New Game</h1>
  <div class="letter">
    <% @letters.each do |letter| %>
    <p><%= "#{letter}" %></p>
    <% end %>
  </div>
</div>
<div class="center">
  <h2>What is the longest word you can find??</h2>
  <form class="form-inline" action="score" method="post" data-turbo="false">
    <div class="form-group mb-2">
      <%= hidden_field_tag :letters, @letters %>
      <input class="form-control" type="text" name="word">
      <div class="text-center">
        <button class="btn btn-primary mt-2" type="submit">Try!</button>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      </div>
    </div>
  </form>
</div>
